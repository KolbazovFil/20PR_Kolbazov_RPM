<Window x:Class="_20PR_Kolbazov_RPM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20PR_Kolbazov_RPM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <Grid Background="White">
        <Canvas>
            <Ellipse x:Name="animatedCircle" Width="100" Height="100" Fill="Blue" Canvas.Left="50" Canvas.Top="50"/>
            <Rectangle x:Name="animatedRectangle" Width="100" Height="100" Fill="Green" Canvas.Left="200" Canvas.Top="50"/>
            <TextBlock x:Name="animatedText" Text="Hello WPF!" FontSize="30" Foreground="Red" Canvas.Left="350" Canvas.Top="50"/>
            <Button Content="Start Animation" Click="StartAnimation_Click" Width="120" Height="30" Canvas.Left="50" Canvas.Top="200"/>
            <Button Content="Stop Animation" Click="StopAnimation_Click" Width="120" Height="30" Canvas.Left="200" Canvas.Top="200"/>
            <Button Content="Reset Animation" Click="ResetAnimation_Click" Width="120" Height="30" Canvas.Left="350" Canvas.Top="200"/>
        </Canvas>
    </Grid>
    </Window>